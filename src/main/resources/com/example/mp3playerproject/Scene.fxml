<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="pane" prefHeight="107.0" prefWidth="552.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mp3playerproject.Controller">
   <children>
      <Label fx:id="songLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="69.0" prefWidth="562.0" style="-fx-background-color: black;" text="MP3 Player" textFill="#8cf7ff">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <ProgressBar fx:id="songProgressBar" layoutY="69.0" prefHeight="20.0" prefWidth="562.0" progress="0.0" />
      <Button fx:id="playButton" layoutX="-4.0" layoutY="88.0" mnemonicParsing="false" onAction="#playMedia" prefHeight="29.0" prefWidth="68.0" text="PLAY" />
      <Button fx:id="pauseButton" layoutX="60.0" layoutY="88.0" mnemonicParsing="false" onAction="#pauseMedia" prefHeight="29.0" prefWidth="68.0" text="PAUSE" />
      <Button fx:id="resetButton" layoutX="125.0" layoutY="88.0" mnemonicParsing="false" onAction="#resetMedia" prefHeight="29.0" prefWidth="68.0" text="RESET" />
      <Button fx:id="previousButton" layoutX="186.0" layoutY="88.0" mnemonicParsing="false" onAction="#previousMedia" prefHeight="29.0" prefWidth="68.0" text="PREVIOUS">
         <font>
            <Font size="10.0" />
         </font>
      </Button>
      <Button fx:id="nextButton" layoutX="249.0" layoutY="88.0" mnemonicParsing="false" onAction="#nextMedia" prefHeight="29.0" prefWidth="68.0" text="NEXT" />
      <ComboBox fx:id="speedBox" layoutX="309.0" layoutY="88.0" onAction="#changeSpeed" prefHeight="29.0" prefWidth="89.0" promptText="SPEED" />
      <Slider fx:id="volumeSlider" layoutX="399.0" layoutY="95.0" max="100.0" prefHeight="16.0" prefWidth="163.0" value="50.0" />
   </children>
</AnchorPane>
